#include <stdio.h>
#define N 10
int sum=0;
int i=0;
void pai(char* x)
{
	while(1)
	{
		int a=1;
		for(i=0;i<(N-1);i++)
		{
			if(*(x+i)>*(x+i+1))
			{
				sum=*(x+i);
				*(x+i)=*(x+i+1);
				*(x+i+1)=sum;
				a=0;
			}
		}
		if(a==1) break;
	}


}
char crr1[N]={7,6,5,4,3,2,1};
int main()
{
	pai(crr1);
	int j=0;
	for(j=0;j<10;j++)
	printf("%d  ",crr1[j]);
	putchar('\n');
	return 0;
}
